APP_NAME=Rehome
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_PROFILE=light

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (SQLite for Light profile - simple & fast)
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# Light Profile: File-based drivers (no external dependencies)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log

# File Storage (local for Light profile)
FILESYSTEM_DISK=local
# AWS settings commented out - uncomment when switching to Scale profile
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=rehome-production-private
# AWS_URL=

# Email (Log driver for Light profile - no SMTP needed)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="no-reply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (Log driver for Light profile)
# For Scale profile, uncomment Reverb settings below:
# BROADCAST_CONNECTION=reverb
# REVERB_APP_ID=732444
# REVERB_APP_KEY=jjporfhyugshbgtmjdnw
# REVERB_APP_SECRET=p7trrdu9jw8isql1yvbu
# REVERB_HOST=localhost
# REVERB_PORT=8080
# REVERB_SCHEME=http

# Authentication & CORS
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000

# Session Security (Light profile defaults)
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# AI Configuration (Light profile - efficient defaults)
AGENT_PROVIDER=openai
AGENT_MODEL=gpt-4o-mini
AGENT_MAX_TOKENS=4000
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT=30

# Light Profile: Cost tracking disabled for simplicity
COST_METER_ENABLED=false
COST_TRACKING_ENABLED=false

# Light Profile: Streaming disabled (enables when switching to Scale)
STREAMING_ENABLED=false

# OpenAI (required for AI features)
OPENAI_API_KEY=

# Anthropic (alternative - uncomment if preferred over OpenAI)
# AGENT_PROVIDER=anthropic
# ANTHROPIC_API_KEY=

# Frontend
VITE_APP_NAME="${APP_NAME}"
# Reverb frontend config (uncomment when enabling Scale profile)
# VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
# VITE_REVERB_HOST="${REVERB_HOST}"
# VITE_REVERB_PORT="${REVERB_PORT}"
# VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Feature Profile Configuration
FEATURE_PROFILE=light

# Optional: Monitoring & Error Tracking (disabled in Light profile)
# SENTRY_LARAVEL_DSN=
# TELESCOPE_ENABLED=false

# Redis settings (for Scale profile - keep commented in Light)
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=null

# Scale Profile Migration Note:
# To switch to Scale profile:
# 1. Copy .env.scale.example to .env (or use `make scale`)
# 2. Update database to PostgreSQL/MySQL
# 3. Set up Redis for cache/sessions/queues
# 4. Enable real-time features (Reverb/Pusher)
# 5. Configure production services (S3, Resend, etc.)
