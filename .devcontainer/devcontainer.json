{
  "name": "Rehome Full-Stack Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/php:1": {
      "version": "8.3"
    },
    "ghcr.io/devcontainers/features/composer:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bmewburn.vscode-intelephense-client",
        "ms-vscode.vscode-docker",
        "Laravel.vscode-laravel",
        "ryannaddy.laravel-artisan",
        "chrismason.vscode-laravel-goto"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "php.suggest.basic": false,
        "php.validate.enable": false
      }
    }
  },

  "forwardPorts": [80, 3000, 3001, 5000, 6006, 8000, 3306, 8025],
  "portsAttributes": {
    "80": {
      "label": "Nginx Web Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Frontend Dev Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "API Server",
      "onAutoForward": "silent"
    },
    "6006": {
      "label": "Storybook",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL Database",
      "onAutoForward": "silent"
    },
    "8025": {
      "label": "MailHog",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "updateContentCommand": "echo 'Container updated, run: bash .devcontainer/quick-fix.sh if needed'",

  "remoteUser": "vscode",
  
  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "TZ": "UTC"
  },
  
  "mounts": [
    "source=rehome-composer-cache,target=/home/vscode/.composer,type=volume",
    "source=rehome-npm-cache,target=/home/vscode/.npm,type=volume"
  ]
}